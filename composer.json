{
    "name": "iteks/laravel-json",
    "description": "A Laravel package for simplified JSON data manipulation, offering seamless conversion to collections or arrays with attribute filtering.",
    "type": "library",
    "keywords": ["laravel","php", "json", "collection", "array", "data", "serialize"],
    "license": "MIT",
    "authors": [
        {
            "name": "Jeramy Hing",
            "email": "iteks@msn.com"
        }
    ],
    "require": {
        "php": "^8.1",
        "laravel/framework": "^9.46|^10.10|^11.0"
    },
    "require-dev": {
        "laravel/pint": "^1.14",
        "pestphp/pest": "^2.34",
        "pestphp/pest-plugin-arch": "^2.7",
        "phpstan/phpstan": "^1.10",
        "symfony/var-dumper": "^6.4"
    },
    "autoload": {
        "psr-4": {
            "Iteks\\Support\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Tests\\": "tests"
        }
    },
    "scripts": {
        "pint:lint": "pint -v --test",
        "pint:fix": "pint -v",
        "phpstan": [
            "phpstan analyse --ansi"
        ],
        "test": "pest --colors=always",
        "test:all": [
            "@pint:lint",
            "@phpstan",
            "@test"
        ]
    },
    "extra": {
        "laravel": {
            "providers": [
                "Iteks\\Support\\JsonServiceProvider"
            ]
        }
    },
    "config": {
        "optimize-autoloader": true,
        "preferred-install": "dist",
        "sort-packages": true,
        "allow-plugins": {
            "pestphp/pest-plugin": true,
            "php-http/discovery": true
        }
    },
    "minimum-stability": "dev",
    "prefer-stable": true
}
