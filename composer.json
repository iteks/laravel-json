{
    "name": "iteks/laravel-json",
    "description": "Streamlines JSON data manipulation in Laravel, enabling effortless conversion of JSON to Laravel Collections or arrays. Tailored for Laravel developers who prioritize efficient JSON data handling. This utility is essential for projects that demand advanced JSON data processing.",
    "type": "library",
    "keywords": ["laravel","php", "json", "collection", "array", "data", "serialize"],
    "license": "MIT",
    "authors": [
        {
            "name": "Jeramy Hing",
            "email": "iteks@msn.com"
        }
    ],
    "require": {
        "php": "^8.1",
        "laravel/framework": "^9.46|^10.10|^11.0"
    },
    "require-dev": {
        "fakerphp/faker": "^1.23",
        "laravel/pint": "^1.13",
        "mockery/mockery": "^1.6",
        "pestphp/pest": "^2.33",
        "pestphp/pest-plugin-laravel": "^2.2",
        "phpstan/phpstan": "^1.10",
        "symfony/var-dumper": "^6.4"
    },
    "autoload": {
        "psr-4": {
            "Iteks\\Support\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Tests\\": "tests/"
        }
    },
    "scripts": {
        "lint": "pint -v",
        "phpstan": [
            "./vendor/bin/phpstan analyse src"
        ],
        "test": "vendor/bin/pest"
    },
    "extra": {
        "laravel": {
            "providers": [
                "Iteks\\Support\\ServiceProvider"
            ]
        }
    },
    "config": {
        "optimize-autoloader": true,
        "preferred-install": "dist",
        "sort-packages": true,
        "allow-plugins": {
            "pestphp/pest-plugin": true,
            "php-http/discovery": true
        }
    },
    "minimum-stability": "dev",
    "prefer-stable": true
}
